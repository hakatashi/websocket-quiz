rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }

    match /quizzes/{quizId} {
      allow read, write;
    }

    match /quizzes/{quizId}/answers/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }

    match /rooms/{quizId} {
      allow read, write;
    }
  }
}